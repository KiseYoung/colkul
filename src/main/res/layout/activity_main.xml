<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_math_operation"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="start"
        android:gravity="end"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@color/white"
        android:gravity="end"
        android:textSize="30sp"
        android:ellipsize="end"
        android:singleLine="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/btn_clear"
            style="@style/ActionButton"
            android:text="AC"
            />
        <TextView
            android:id="@+id/btn_div"
            style="@style/ActionButton"
            android:text="/"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/btn_7"
            style="@style/NumberActionButton"
            android:text="7"
            />
        <TextView
            android:id="@+id/btn_8"
            style="@style/NumberActionButton"
            android:text="8"
            />
        <TextView
            android:id="@+id/btn_9"
            style="@style/NumberActionButton"
            android:text="9"
            />
        <TextView
            android:id="@+id/btn_mult"
            style="@style/NumberActionButton2"
            android:text="X"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/btn_4"
            style="@style/NumberActionButton"
            android:text="4"
            />
        <TextView
            android:id="@+id/btn_5"
            style="@style/NumberActionButton"
            android:text="5"
            />
        <TextView
            android:id="@+id/btn_6"
            style="@style/NumberActionButton"
            android:text="6"
            />
        <TextView
            android:id="@+id/btn_minus"
            style="@style/NumberActionButton2"
            android:text="-"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/btn_1"
            style="@style/NumberActionButton"
            android:text="1"
            />
        <TextView
            android:id="@+id/btn_2"
            style="@style/NumberActionButton"
            android:text="2"
            />
        <TextView
            android:id="@+id/btn_3"
            style="@style/NumberActionButton"
            android:text="3"
            />
        <TextView
            android:id="@+id/btn_plus"
            style="@style/NumberActionButton2"
            android:text="+"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/btn_0"
            style="@style/NumberActionButton"
            android:text="0"
            />
        <TextView
            android:id="@+id/btn_point"
            style="@style/NumberActionButton"
            android:text="."
            />
        <TextView
            android:id="@+id/btn_back"
            style="@style/NumberActionButton"
            android:text="Back"
            />
        <TextView
            android:id="@+id/btn_equal"
            style="@style/NumberActionButton2"
            android:text="="
            />

    </LinearLayout>



</LinearLayout>
